<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2>Sign up</h2>
  <%= f.error_notification %>

    <%= f.input :email, required: true, label: false, placeholder: 'email', autofocus: true, input_html: {class: 'form-control'} %>
    <%= f.input :password, required: true, label: false, placeholder: 'password',input_html: {class: 'form-control'}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'password confirmation', input_html: {class: 'form-control'} %>
    <%= f.button :submit, "Sign up" %>
<%= render "devise/shared/links" %>
<% end %>


